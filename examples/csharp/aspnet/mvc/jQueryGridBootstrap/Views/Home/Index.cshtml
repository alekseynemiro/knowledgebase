@{
    Layout = null;
}

<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>jQuery Grid Bootstrap</title>
		<meta charset="utf-8" />
		<script src="/Scripts/jquery-1.9.1.min.js"></script>
		<script src="/Scripts/bootstrap.min.js"></script>
		<script src="/Scripts/grid.min.js"></script>
		<link href="/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
		<link href="/Content/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
		<link href="/Content/grid.min.css" rel="stylesheet" type="text/css" />
	</head>
	<body>
		<div class="jumbotron">
			<div class="container">
				<h1>jQuery Grid Bootstrap</h1>
				<p><a href="http://gijgo.com/Grid/Demos/jquery-grid-bootstrap">http://gijgo.com/Grid/Demos/jquery-grid-bootstrap</a></p>
			</div>
		</div>

		<div class="container">
			<div class="row" style="margin-top: 10px">
				<div class="col-xs-12">
					<table id="grid"></table>
				</div>
			</div>
		</div>

		<script type="text/javascript">
			$(document).ready(function () {
				var grid = $('#grid').grid({
					dataSource: { url: '/Home/GetAccounts', method: 'POST' },
					uiLibrary: 'bootstrap',
					columns: [
						{ field: 'AccountID', sortable: true },
						{ field: 'FirstName', sortable: true },
						{ field: 'LastName', sortable: true },
						{ field: 'Company', sortable: true },
						{ field: 'Position', sortable: true }
					],
					pager: { limit: 2, sizes: [2, 5, 10, 20] }
				});
			});
		</script>
	</body>
</html>
